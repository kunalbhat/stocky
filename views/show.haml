%header.title-bar
  %nav.menu
  .add-symbol

%ul
  - @stocks.each do |stock|
    - if (stock.change.first).to_f < 0
      - change = 'loss'

    %li{ class: "#{change}" }
      .stock-info-wrapper
        .stock-info
          %strong= stock.symbol
          %p.stock-price
            = stock.price
            %span= stock.change[1]
        .settings
      .stock-setings-drawer
